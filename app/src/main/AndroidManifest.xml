<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pentilmis.pen_tix">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/base_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/base_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.pentilmis.pen_tix.Activity.FavoriteActivity"></activity>
        <activity android:name="com.pentilmis.pen_tix.Activity.DetailMovieActivity" />
        <activity android:name="com.pentilmis.pen_tix.Activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pentilmis.pen_tix.Activity.MainActivity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>